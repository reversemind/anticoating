<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>false</stop-on-errors>
        <wildcard>true</wildcard>
    </configuration>

    <mapping type="one-way" date-format="dd.MM.yyyy HH:mm:ss">
        <class-a>com.company.test.httpclient.rest.BalanceResponse</class-a>
        <class-b>com.company.test.httpclient.rest.BalanceData</class-b>
        <field>
            <a>amount</a>
            <b>value</b>
        </field>
        <field>
            <a>balanceDate</a>
            <b>date</b>
        </field>
    </mapping>

</mappings>